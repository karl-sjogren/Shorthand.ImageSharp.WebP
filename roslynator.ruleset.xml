<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="Rules for ASP.NET Core" ToolsVersion="15.0">
  <Rules AnalyzerId="Roslynator.CSharp.Analyzers" RuleNamespace="Roslynator.CSharp.Analyzers">
    <Rule Id="RCS1003" Action="Warning" /> <!-- Add braces to if-else (when expression spans over multiple lines) -->
    <Rule Id="RCS1077" Action="None" /> <!-- Optimize LINQ method call -->
    <Rule Id="RCS1035" Action="Warning" /> <!-- Remove redundant comma in initializer -->
    <Rule Id="RCS1037" Action="Warning" /> <!-- Remove trailing white-space -->
    <Rule Id="RCS1057" Action="Warning" /> <!-- Add empty line between declarations -->
    <Rule Id="RCS1090" Action="None" /> <!-- Call 'ConfigureAwait(false)' -->
    <Rule Id="RCS1096" Action="None" /> <!-- Use bitwise operation instead of calling 'HasFlag' -->
    <Rule Id="RCS1010" Action="Warning" /> <!-- Use 'var' instead of explicit type (when the type is obvious) -->
    <Rule Id="RCS1118" Action="None" /> <!-- Mark local variable as const -->
    <Rule Id="RCS1124" Action="None" /> <!-- Inline local variable -->
    <Rule Id="RCS1173" Action="None" /> <!-- Use coalesce expression instead of if -->
    <Rule Id="RCS1176" Action="Warning" /> <!-- Use 'var' instead of explicit type (when the type is not obvious) -->
    <Rule Id="RCS1177" Action="Warning" /> <!-- Use 'var' instead of explicit type (in foreach) -->
    <Rule Id="RCS1179" Action="None" /> <!-- Use return instead of assignment -->
    <Rule Id="RCS1221" Action="None" /> <!-- Use pattern matching instead of combination of 'as' operator and null check -->
    <Rule Id="RCS1224" Action="None" /> <!-- Make method an extension method -->
    <Rule Id="RCS0003" Action="Warning" /> <!-- Add empty line after using directive list -->
    <Rule Id="RCS1036" Action="Warning" /> <!-- Remove redundant empty line -->
    <Rule Id="RCS1046" Action="None" /> <!-- Asynchronous method name should end with 'Async' -->
    <Rule Id="RCS1094" Action="Warning" /> <!-- Declare using directive on top level -->
  </Rules>
  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp.Features" RuleNamespace="Microsoft.CodeAnalysis.CSharp.Features">
    <Rule Id="IDE0005" Action="Warning" />
    <Rule Id="IDE0019" Action="None" />
    <Rule Id="IDE0019WithoutSuggestion" Action="None" />
    <Rule Id="IDE0037" Action="None" />
    <Rule Id="IDE0037WithoutSuggestion" Action="None" />
    <Rule Id="IDE0039" Action="None" />
  </Rules>
</RuleSet>
